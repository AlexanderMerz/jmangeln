<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>J&M Angeln - Warenkorb</title>
    <% include includes/styles %>

    <style>
        ul {
            margin: 1rem;
        }
        ul li {
            position: relative;
            width: 100%;
            height: 200px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
        }
        ul li img {
            height: calc(200px - 2rem);
            width: auto;
        }
        ul li h1 {
            margin: 0;
        }
        ul li div {
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
            align-items: center;
            height: 100%;
            width: 100%;
        }
        .info {
            margin: 1rem;
            text-align: center;
        }
    </style>

</head>
<body>
    <% include includes/navigation %>
    <% if (cart) { %>
        <ul>
            <% for (const product of cart) { %>
                <li>
                    <img src="https://Placehold.it/500x250" alt="Produktbild">
                    <div class="product__details">
                        <h1><%= product.data.name %></h1>
                        <p><%= product.data.description %></p>
                    </div>
                    <div>
                        <span>Einzelpreis</span>
                        <span><%= (product.data.price).toFixed(2) %> €</span>
                    </div>
                    <div>
                        <span>Menge</span>
                        <span><%= product.quantity %></span>
                    </div>
                    <div>
                        <span>Größe</span>
                        <span><%= product.size %></span>
                    </div>
                </li>
            <% } %>
        </ul>
        <div class="info">
            <h1>Anzahl Gegenstände: <%= quantity %></h1>
            <h1>Gesamtwert: <%= total.toFixed(2) %> €</h1>
            <button class="delete">Warenkorb leeren</button>
        </div>
    <% } %>

    <script src="/scripts/ui.js"></script>

</body>
</html>