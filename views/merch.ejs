<!DOCTYPE html>
<html lang="de">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>J&M Angeln - Merch</title>

    <% include includes/styles %>

    <link rel="stylesheet" href="/styles/slideshow.css">
    <link rel="stylesheet" href="/styles/cards.css">
    <link rel="stylesheet" href="/styles/merch.css">
    <link rel="preload" href="/scripts/lazy-load.mjs" as="script">

    <script defer src="/scripts/slideshow.js"></script>
    <script type="module" src="/components/info-card.mjs"></script>
    <script defer src="/components/nav-bar.js"></script>
    <script defer src="/components/cart-bar.js"></script>
    <script defer src="/scripts/product-filter.js"></script>

</head>
<body>
    
    <nav-bar></nav-bar>

    <main>

        <section class="slider">
            <div class="slide current">
            <div class="slide__content">
                <h1>Slide One</h1>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. 
                    Numquam nobis corrupti porro ullam, magnam rerum.</p>
                </div>
            </div>
            <div class="slide">
                <div class="slide__content">
                    <h1>Slide Two</h1>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. 
                        Numquam nobis corrupti porro ullam, magnam rerum.</p>
                </div>
            </div>
        </section>
        <div class="dots"></div>
        <div class="heading">
          <h1>Merchandise</h1>
        </div>
        <section class="filter">
            <input id="search" type="text" id="search" name="search" placeholder="Suchen...">
            <div class="price__config">
                <div class="price__range">
                    <span>1 €</span>
                    <input id="price" type="range" name="price" min="1" max="50" value="50" step="1">
                    <span>50 €</span>
                </div>
                <p class="price__output">Alle Preise</p>
            </div>
            <div class="categories">
                <h3 class="active">Alle</h3>
                <h3>T-Shirts</h3>
                <h3>Hoodies</h3>
                <h3>Caps</h3>
            </div>
        </section>

        <section class="products cards">
          <div class="card-wrapper">
            <% for (const product of products) { %>
              <info-card
                class="product"
                image="/images/merch_many.jpg"
                href="/merch/produkt/<%= product._id %>"
                data-name="<%= product.name %>"
                data-price="<%= (product.price).toFixed(2) %>"
                data-category="<%= product.category %>"
              >
                <div class="product__info">
                  <h1><%= product.name %></h1>
                  <h1 class="price"><%= (product.price).toFixed(2) %> €</h1>
                </div>
              </info-card>
            <% } %>
          </div>
        </section>
    </main>

    <% include includes/footer %>

    <cart-bar qty="<%= quantity %>"></cart-bar>

</body>
</html>