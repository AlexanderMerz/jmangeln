<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>J&M Angeln - Checkout</title>
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        const stripe = Stripe('pk_test_I6udDS8bLacJgu9OMoP2U94k00FQcF153E');
    </script>
    <% include includes/styles %>
    <style>
        h2 {
            margin: 0;
            font-size: 20px;
        }
        .btn {
            box-sizing: border-box;
            width: 500px;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: white;
            margin: 5px 10px;
            border: none;
            border-radius: 10px;
            padding: 1rem 2rem;
            box-shadow: 0 0 3px;
        }
        .btn:hover {
            background-color: white;
            box-shadow: none;
        }
        .flex-row {
            max-width: 500px;
            height: 40px;
        }
        .payment {
            display: flex;
            width: 500px;
            margin: 0 auto;
        }
        @media (max-width: 768px) {
            .flex-row {
                max-width: 300px;
            }
        }
        @media (max-width: 500px) {
            .payment {
                width: 100%;
                flex-direction: column;
            }
            .btn {
                width: 320px;
                margin: 2px auto;
            }
        }
    </style>
</head>
<body>

    <% include includes/navigation %>

    <main class="centered">

        <h1 class="light">Checkout</h1>

        <hr>

        <section class="flex-column">
            <% for (const product of cart) { %>
                <div class="flex-row max-width">
                    <h2 class="light">
                        <span><%= product.quantity %></span>
                        <span>&nbsp;x&nbsp;</span>
                        <span><%= product.data.name %></span>
                        <span><%= product.size %></span>
                    </h2>
                    <h2 class="light price">
                        <%= (product.data.price * product.quantity).toFixed(2) %> €
                    </h2>
                </div>
            <% } %>
        </section>

        <hr>

        <section class="flex-column">
            <div class="flex-row max-width">
                <h2 class="light">Gesamtwert</h2>
                <h2 class="light price"><%= (total).toFixed(2) %> €</h2>
            </div>
        </section>

        <br>

        <section class="payment">
            <button id="stripe-checkout" class="btn">
                <img src="/images/credit_card-24px.svg" alt="Kreditkarte">
                <span>&nbsp;Karte</span>
            </button>
            <button class="btn">Paypal</button>
        </section>

    </main>

    <script src="/scripts/ui.js"></script>
    <script>
        document.getElementById('stripe-checkout').addEventListener('click', function() {
            stripe.redirectToCheckout({ sessionId: '<%= sessionId %>' });
        });
    </script>

</body>
</html>
